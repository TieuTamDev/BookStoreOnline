@model BookStoreOnline.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid" style="color:aqua">
    <div style="text-align:center">
        <h2>Chỉnh sửa loại sản phẩm</h2>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CategoryID)

        <div class="form-group">
            <div class="col-md-6" style="margin-left: auto; margin-right: auto;">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>
        
            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Lưu" class="btn btn-danger" style="margin-left: 700px;" />
                    <div class="btn btn-light" style="margin-left: 10px;">
                        @Html.ActionLink("Quay lại", "Index")
                    </div>
                </div>
            </div>
    </div>
}


