
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container body-page">

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 login-box">
            <h3 style="color: wheat; text-align:center ;">Đăng nhập</h3>
            @using (Html.BeginForm("Login", "User"))
            {
                <div class="form-group">
                   <div style="padding:10px 0 10px 0"></div>
                    <input type="email" name="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Nhập địa chỉ email của bạn" style="background-color: rgb(255, 255, 255,0.85)">

                </div>
                <div class="form-group">
                    <div style="padding:0px 0 10px 0"></div>
                    <input type="password" name="Password" class="form-control" id="exampleInputPassword1" placeholder="Mật khẩu đăng nhập" style="background-color: rgb(255, 255, 255,0.85)">
                    <span style="color:red">@ViewBag.ThongBao</span>
                </div>
                <button type="submit" class="btn-login">Đăng nhập</button>
            }
            <div class="sign-up-link" style="padding:0 0 0 40px;color:yellow;font-size:20px">
                Bạn chưa có tài khoản ? <a style="color:white" href="@Url.Action("SignUp","User")">Đăng ký ngay</a>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>

</div>

